<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @section.content %>
</p>

<%= link_to 'Edit', edit_section_path(@section) %> |
<%= link_to 'Back', document_sections_path(@section.document) %><br>

<---Selections--> <br>
<% @section.comments.each do |i| %>
<p>
  Score: <%= i.score %> <br>
    Text: <%= i.content %>
<p>
<% end %>

<%= form_tag section_path(@section) + '/comment' do %>


  <div class="field">
    <%= text_field :comment, :content %>
  </div>

  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
