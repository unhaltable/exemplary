<div id="title-bar">
  <div id="title-name">
    <h1>Listing courses</h1>
  </div>
</div>

<div id="document-actions">
  <%= link_to 'New Course', new_course_path %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Course Code</th>
      <th colspan="2" id="table-head-actions">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.coursecode %></td>
        <td class="table-actions"><%= link_to 'Edit', edit_course_path(course) %></td>
        <td class="table-actions"><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
