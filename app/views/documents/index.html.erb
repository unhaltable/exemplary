<% content_for :head do %>
  <%= javascript_include_tag 'list.min' %>
<% end %>

<h1>My documents</h1>

<% if @documents.any? %>
  <div id="documents">
    <input class="search" placeholder="Search" />
    <button class="sort" data-sort="name">
      Sort by name
    </button>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody class="list">
        <% @documents.each do |document| %>
          <tr>
            <td class="name"><%= document.name %></td>
            <td><%= link_to 'Show', document %></td>
            <td><%= link_to 'Edit', edit_document_path(document) %></td>
            <td><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
<% end %>

<%= link_to 'New Document', new_document_path %>


<% content_for :foot do %>
  <script>
    var options = {
      valueNames: [ 'name' ]
    };

    var docsList = new List('documents', options);
  </script>
<% end %>
