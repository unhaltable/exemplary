source 'https://rubygems.org'

# Ruby version
ruby '2.1.3'

# Ruby on Rails!
gem 'rails', '4.1.5'

group :development, :test do
  # Use sqlite3 as the database for Active Record
  gem 'sqlite3'

  # Open emails in the browser instead of sending
  gem 'letter_opener'
end

group :test do
  # Use minitest-spec-rails to enable the spec DSL
  gem 'minitest-spec-rails'

  # Use capybara to simulate user interaction
  gem 'capybara'
end

group :production do
  # Use postgresql as the production database for Active Record
  gem 'pg'

  # Direct logs to stdout and enable development/production parity
  gem 'rails_12factor'

  # Use New Relic for monitoring
  # gem 'newrelic_rpm'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', '~> 0.4.0'
end

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'

# Use AngularJS
gem 'angularjs-rails'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer',  platforms: :ruby

# Use formtastic for HTML form generation
gem 'formtastic'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'

# Allows manually setting request timeout
gem 'rack-timeout'

# Use puma as the app server
# gem 'puma'

# Use CarrierWave for HTML file uploads
gem 'carrierwave'

# Use Cloudinary for file & image uploads
gem 'cloudinary'

# Use devise for authentication
gem 'devise'

# Use CanCanCan for authorization
gem 'cancancan', '~> 1.9'

# To render markdown
gem 'redcarpet'
